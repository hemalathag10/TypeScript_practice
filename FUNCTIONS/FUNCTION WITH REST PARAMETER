// Function with a rest parameter

function calculateTotalCost(basePrice: number, ...discounts: number[]): number {
    const totalDiscount = discounts.reduce((acc, discount) => acc + discount, 0);
    const discountedPrice = basePrice - totalDiscount;
    return discountedPrice;
}

const itemBasePrice = 100;
const totalCost = calculateTotalCost(itemBasePrice, 10, 5, 8,25);

console.log(`Item Base Price: $${itemBasePrice}`);
console.log(`Discounts Applied: $${totalCost - itemBasePrice}`);
console.log(`Total Cost: $${totalCost}`);

OUTPUT:  Item Base Price: $100
         Discounts Applied: $-48
         Total Cost: $52
